[alias]
    l       = log .
    ll      = log --pretty=oneline --abbrev-commit --max-count=15
    lg      = log --graph --full-history --all --color --pretty=format:"%x1b[31m%h%x09%x1b[32m%d%x1b[0m%x20%s"
    ci      = commit
    s       = status -sb
    co      = checkout

[core]
	autocrlf = input
	pager = $PAGER
    editor = vim
    whitespace = trailing-space,space-before-tab
	excludesfile = ~/dotfiles/gitignore

[help]
    browser = open

[diff]
    renames = copies

[push]
    default = simple

[color]
    ui = auto

[color "diff"]
    meta = blue bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "branch"]
    current = yellow reverse
    local = yellow bold
    remote = green bold
    plain = red bold

[color "status"]
    added = yellow
    changed = green bold
    untracked = blue bold

[url "https://"]
	insteadOf = git://

[include]
    path = .gitconfig.local
