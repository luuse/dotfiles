[user]
	name = Andreas Falk

[core]
	autocrlf = false
	pager = $PAGER
    whitespace = trailing-space,space-before-tab
	excludesfile = ~/dotfiles/gitignore

[help]
    browser = open

[alias]
    l       = log .
    ci      = commit
    s       = status -sb

[color]
	diff = auto
	status = auto
	branch = auto

[difftool "Kaleidoscope"]
	cmd = ksdiff-wrapper git \"$LOCAL\" \"$REMOTE\"
[difftool]
	prompt = false
[diff]
	tool = Kaleidoscope
