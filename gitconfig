[alias]
    l       = log .
    ll      = log --pretty=oneline --abbrev-commit --max-count=15
    ci      = commit
    s       = status -sb

[core]
	autocrlf = input
	pager = $PAGER
    editor = vim
    whitespace = trailing-space,space-before-tab
	excludesfile = ~/dotfiles/gitignore

[help]
    browser = open

[diff]
    renames = copies

[push]
    default = current

[color]
    ui = auto

[color "diff"]
    meta = blue bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "branch"]
    current = yellow reverse
    local = yellow bold
    remote = green bold
    plain = red bold

[color "status"]
    added = yellow
    changed = green bold
    untracked = blue bold
